@model NOUR.PFE.WEB.Models.DashboardViewModel
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1 style="margin-left:100px; padding-top:50px">Dashboard</h1>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row" style="margin-top:80px">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.Users_count</h3>

                        <p>User registrations</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.Maintenance_count</h3>

                        <p>Vehicle under maintenance</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-tools"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.Vehicule_count</h3>

                        <p>Vehicle's number</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-car"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.Reservations_count</h3>

                        <p>Reservation requests</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- /.card-body -->
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Vehicles Statistics</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
           
            <!-- /.card-body -->
            <div class="card-footer p-0">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            Available Vehicles
                            <span class="float-right text-danger">
                                @if ((((decimal)Model.VehiculeAvailable / (Model.Vehicule_count)) * 100) < 50)
                                {
                                    <i class="fas fa-arrow-down text-sm"></i>
                                }
                                else if ((((decimal)Model.VehiculeAvailable / (Model.Vehicule_count)) * 100) > 50)
                                {
                                    <i class="fas fa-arrow-up text-sm"></i>
                                }
                                else
                                {
                                    <i class="fas fa-arrow-left text-sm"></i>
                                }
                                @(((decimal)Model.VehiculeAvailable / (Model.Vehicule_count))*100)
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            Reserved Vehicles
                            <span class="float-right text-danger">
                                @if ((((decimal)Model.VehiculeReserved / (Model.Vehicule_count)) * 100) < 50)
                                {
                                    <i class="fas fa-arrow-down text-sm"></i>
                                }
                                else if ((((decimal)Model.VehiculeReserved / (Model.Vehicule_count)) * 100) > 50)
                                {
                                    <i class="fas fa-arrow-up text-sm"></i>
                                }
                                else
                                {
                                    <i class="fas fa-arrow-left text-sm"></i>
                                }

                                @(((decimal)Model.VehiculeReserved / (Model.Vehicule_count)) * 100)

                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            Unavailable Vehicles
                            <span class="float-right text-warning">
                                @if ((((decimal)Model.VehiculeUnavailable / (Model.Vehicule_count)) * 100)<50)
                                {
                                    <i class="fas fa-arrow-down text-sm"></i>
                                }
                                else if ((((decimal)Model.VehiculeUnavailable / (Model.Vehicule_count)) * 100) > 50)
                                {
                                    <i class="fas fa-arrow-up text-sm"></i>
                                }else
                                {
                                    <i class="fas fa-arrow-left text-sm"></i>
                                }

                                @(((decimal)Model.VehiculeUnavailable / (Model.Vehicule_count)) * 100)
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.footer -->
        </div>
        <!-- /.card -->

       
    </div>

</section>




