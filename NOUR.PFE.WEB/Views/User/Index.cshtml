 @model NOUR.PFE.WEB.Models.UserViewModel
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
</head>
<body>
   <div class="container p-2">
        <div class="row pt-5">
            <div class="col-6">
                <h1>Users List</h1>
            </div>
            <div class="col-6">
                <a style="margin-left:400px" asp-controller="User" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Add User
                </a>
            </div>
        </div>

   </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Login</th>
                        <th>Email</th>
                        <th>User Phone</th>
                        <th>User Role</th>
                        <th>Creation Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var User in Model.Users)
                    {
                        <tr>
                            <td>@User.Id</td>
                            <td>@User.FirstName</td>
                            <td>@User.LastName</td>
                            <td>@User.Login</td>
                            <td>@User.Email</td>
                            <td>@User.UserPhone</td>
                            <td>@User.UserRole</td>
                            <td>@User.CreationDate</td>
                            <td>
                                <!-- Edit Button -->
                                <a href="@Url.Action("Edit", "User", new { id = User.Id })" class="btn btn-primary" style="margin-right:10px">
                                    <i class="fas fa-user-edit"></i>
                                </a>

                                <!-- Delete Button -->
                                <a href="@Url.Action("Delete", "User", new { id = User.Id })" class="btn btn-danger" style="margin-right:10px">
                                    <i class="fas fa-user-times"></i>

                                </a>

                                <!-- Details Button -->
                                <a href="@Url.Action("Details", "User", new { id = User.Id })" class="btn btn-info">
                                    <i class="fas fa-user" ></i>

                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
             </table>
        </div>
    </div>

</body>
</html>
<style>
    h1{
        margin-bottom:50px;
        margin-left:90px;
    }
   
</style>
