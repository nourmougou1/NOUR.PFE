                            </select>
                            <span asp-validation-for="VehiculeTypeId" class="text-danger"></span>
                        </div>
                        <br/>

                        <label asp-for="MissionDate">Mission Date</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                            <input asp-for="MissionDate" type="date" class="form-control" placeholder="Mission's Date">
                            <span asp-validation-for="MissionDate" class="text-danger"></span>
                        </div>
                        <br/>

                        
                        <label asp-for="MissionAddress">Mission's Address</label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-map"></i></span>
                            </div>
                            <input asp-for="MissionAddress" type="text" class="form-control" placeholder="Mission's Address">
                            <span asp-validation-for="MissionAddress" class="text-danger"></span>

                        </div>
                        <br />
                        <label asp-for="Description">Description</label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-pen"></i></span>
                            </div>
                            <textarea asp-for="Description"  class="form-control" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>

                        </div>
                        <br /> 

                        <div class="card-footer">
                            <button asp-controller="Request" asp-action="Create" class="btn  btn-success  float-right"> <i class="fa fa-check"></i> Add</button>

                            <button asp-controller="Request" asp-action="Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i>Retour</button>
                        </div>
                    </div>
