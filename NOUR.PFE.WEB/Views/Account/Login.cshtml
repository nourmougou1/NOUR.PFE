@model NOUR.PFE.Web.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body style="background-image:src('../../wwwroot/img/backgroudweb.avif')">
    <div class="login-container">
        <form class="login-form" asp-controller="Account" asp-action="Login" method="post">
            <h2>Login</h2>
            <div class="input-group">
                <label asp-for="Username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="input-group">
                <label asp-for="Password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="input-group">
                <button type="submit">Login</button>
            </div>
            <div class="forgot-password">
                <a href="#">Forgot Password?</a>
            </div>
        </form>
    </div>
</body>
</html>

<style>

    body {
        font-family: Arial, sans-serif;
        background-image : src('');
        
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-form {
        padding: 20px;
        border-radius: 16px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 400px;
    }

        .login-form h2 {
            margin-bottom: 20px;
            text-align: center;
        }

    .input-group {
        margin-bottom: 15px;
    }

        .input-group label {
            display: block;
            margin-bottom: 5px;
            margin-left: 24px;
        }

        .input-group input {
            width: 327px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-left: 24px;
        }

        .input-group button {
            width: 240px;
            padding: 10px;
            background-color: #4455A8;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 79px;
        }

            .input-group button:hover {
                background-color: #889AFD;
                color: #4455A8;
            }

    .forgot-password {
        text-align: center;
    }

        .forgot-password a {
            color: #4455A8;
            text-decoration: none;
        }

            .forgot-password a:hover {
                text-decoration: underline;
                color: #889AFD;
            }

</style>
