@model NOUR.PFE.WEB.Models.MaintenanceTypeViewModel
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div asp-action="Create" class="row">
    <div class="col-md-6">
        <div class="text-danger" asp-validation-summary="ModelOnly">
        </div>

        <div class="card card-primary card-outline">

            <form class="form-horizontal" asp-action="Create" enctype="multipart/form-data">
                <div class="card-header">
                    <h3 class="card-title">

                        Add User
                    </h3>
                </div>

                <div class="card-body">


                    <label asp-for="maintenanceTypeName">Type Name</label>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input asp-for="maintenanceTypeName" type="text" class="form-control" placeholder="Type Name">
                        <span asp-validation-for="maintenanceTypeName" class="text-danger"></span>
                    </div>

                    <br />

                    <label asp-for="description">Description</label>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input asp-for="description" type="text" class="form-control" placeholder="Description">
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>


                </div>



                <div class="card-footer">
                    <button asp-controller="MaintenanceType" asp-action="Create" class="btn  btn-success  float-right"> <i class="fa fa-check"></i> Add</button>

                    <button asp-controller="MaintenanceType" asp-action="Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i>Back</button>
                </div>

            </form>
        </div>

    </div>

</div>
<style>
    .card {
        margin-left: 260px;
        margin-top: 100px;
        width: 550px;
    }
</style>

