@model NOUR.PFE.WEB.Models.VehiculeViewModel
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vehicules</title>
</head>
<body>
    <div class="container p-2">
        <div class="row pt-5">
            <div class="col-6">
                <h1>Vehicles List</h1>
            </div>
            <div class="col-6">
                <a style="margin-left:400px" asp-controller="Vehicule" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Add Vehicule
                </a>
            </div>
        </div>

    </div>
 
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Matricule</th>
                        <th>Type</th>
                        <th>Brand</th>
                        <th>Status</th>
                        <th>kilometrage</th>
                        <th>Parc</th>
                        <th>Purchase Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Vehicule in Model.Vehicules)
                    {
                        <tr>
                            <td>@Vehicule.Imm</td>
                            <td>@Vehicule.VehiculeType.TypeName</td>
                            <td>@Vehicule.VehiculeBrand.Name</td>
                            <td>@Vehicule.Status.Status_name</td>
                            <td>@Vehicule.Kilometrage</td>
                            <td>@Vehicule.parc.Name</td>
                            <td>@Vehicule.PurshaseDate</td>
                            <td>
                                <!-- Edit Button -->
                                <a href="@Url.Action("Edit", "User", new { id = Vehicule.Id })" class="btn btn-primary" style="margin-left:10px;margin-right:10px">
                                    <i class="fas fa-user-edit"></i>
                                </a>

                                <!-- Delete Button -->
                                <a href="@Url.Action("Delete", "User", new { id = Vehicule.Id })" class="btn btn-danger" style="margin-right:10px">
                                    <i class="fas fa-user-times"></i>

                                </a>

                                <!-- Details Button -->
                                <a href="@Url.Action("Details", "User", new { id = Vehicule.Id })" class="btn btn-info" >
                                    <i class="fas fa-user" style="margin-right:10px"> &nbsp; Details</i>

                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</body>
</html>
<style>
    h1 {
        margin-bottom: 50px;
        margin-left: 90px;
    }

   
</style>
