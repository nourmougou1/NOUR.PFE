@model NOUR.PFE.WEB.Models.UserRoleViewModel
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<div class="col-md-6" style="padding-top:100px">
    <div class="text-danger" asp-validation-summary="ModelOnly"> </div>

    <div class="card card-primary card-outline" style=" margin-left:300px;width:450px" >

        <form class="form-horizontal" asp-action="Create" enctype="multipart/form-data">

            <div class="card-header">
                <h3 class="card-title">
                    Add User Role
                </h3>
            </div>

            <div class="card-body">

                <label asp-for="Name">Role Name</label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                 

                <label asp-for="Code">Role Code</label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    <input asp-for="Code" type="text" class="form-control" placeholder="Code">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

            </div>


            <div class="card-footer">
                <button asp-controller="UserRole" asp-action="Create" class="btn  btn-success  float-right"> <i class="fa fa-check"></i> Add</button>

                <button asp-controller="UserRole" asp-action="Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i>Retour</button>
            </div>

        </form>
    </div>

</div>




