@model NOUR.PFE.WEB.Models.BrandViewModel
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<div class="col-md-6">
    <div class="text-danger" asp-validation-summary="ModelOnly"> </div>

    <div class="card card-primary card-outline">

        <form class="form-horizontal" asp-action="Create" enctype="multipart/form-data">

            <div class="card-header">
                <h3 class="card-title">
                    Add Vehicule Brand
                </h3>
            </div>

            <div class="card-body">

                <label asp-for="Name">Brand Name</label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-pen"></i></span>
                    </div>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <label asp-for="Logo">Brand logo</label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-pen"></i></span>
                    </div>
                    <input asp-for="Logo" type="text" class="form-control" placeholder="Logo URL">
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>

            </div>


            <div class="card-footer">
                <button asp-controller="VehiculeBrand" asp-action="Create" class="btn  btn-success  float-right"> <i class="fa fa-check"></i> Add</button>

                <button asp-controller="VehiculeBrand" asp-action="Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i>Retour</button>
            </div>

        </form>
    </div>

</div>




