@model NOUR.PFE.WEB.Models.VehiculeTypeViewModel
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<div class="col-md-6">
    <div class="text-danger" asp-validation-summary="ModelOnly"> </div>

    <div class="card card-primary card-outline">

        <form class="form-horizontal" asp-action="Create" enctype="multipart/form-data">

            <div class="card-header">
                <h3 class="card-title">
                    Add User Role
                </h3>
            </div>

            <div class="card-body">

                <label asp-for="TypeName">Type Name</label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    <input asp-for="TypeName" type="text" class="form-control" placeholder="Type Name">
                    <span asp-validation-for="TypeName" class="text-danger"></span>
                </div>



            </div>


            <div class="card-footer">
                <button asp-controller="VehiculeType" asp-action="Create" class="btn  btn-success  float-right"> <i class="fa fa-check"></i> Add</button>

                <button asp-controller="VehiculeType" asp-action="Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i>Retour</button>
            </div>

        </form>
    </div>

</div>






<style>
    .card {
        margin-left: 300px;
        width: 500px;
        margin-top: 50px;
    }

    h2 {
        padding-left: 185px;
    }

    .btn {
        width: 100px;
    }



    .card-title {
        margin-left: 185px;
    }
</style>


</html>
