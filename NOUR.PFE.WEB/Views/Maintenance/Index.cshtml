
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
        <div class="container p-2">
            <div class="row pt-5">
                <div class="col-6">
                    <h1>Maintenances List</h1>
                </div>
                <div class="col-6">
                    <a style="margin-left:400px" asp-controller="Maintenance" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> &nbsp; Add Maintenance
                    </a>
                </div>
            </div>

        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Maintenance Type</th>
                            <th>DateDebut</th>
                            <th>Address</th>
                            <th>Vehicule</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var maintenance in Model.Maintenances)
                        {
                            <tr>
                                <td>@maintenance.Id</td>
                                <td>@maintenance.MaintenanceType.name</td>
                                <td>@maintenance.DateDebut</td>
                                <td>@maintenance.Address</td>
                                <td>@maintenance.Vehicule</td>
                               
                                <td>
                                    <!-- Edit Button -->
                                    <a href="@Url.Action("Edit", "User", new { id = maintenance.Id })" class="btn btn-primary" style="margin-right:20px">
                                        <i class="fas fa-user-edit"></i>
                                    </a>

                                    <!-- Delete Button -->
                                    <a href="@Url.Action("Delete", "User", new { id = maintenance.Id })" class="btn btn-danger" style="margin-right:20px">
                                        <i class="fas fa-user-times"></i>

                                    </a>

                                    <!-- Details Button -->
                                    <a href="@Url.Action("Details", "User", new { id = maintenance.Id })" class="btn btn-info">
                                        <i class="fas fa-user" style="margin-right:10px"> &nbsp; Details</i>

                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


    </body>
</html>
<style>
    h1 {
        margin-bottom: 50px;
        margin-left: 90px;
    }

</style>

</html>
